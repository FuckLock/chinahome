<%= simple_form_for([:admin, @node]) do |f| %>
  <%= render 'shared/error_messages', target: @node %>
  <%= f.input :name, label: "名称" %>
  <%= f.input :section_id, label: "分类", collection: Section.all.collect { |s| [s.name,s.id] } %>
  <%= f.input :sort, hint: "数字较大的将会排在前面", label: "排序" %>
  <%= f.input :summary,as: :text, input_html: { style: "width:500px; height:200px;" }, label: "简介", hint: "支持Markdown语法" %>
  <%= f.submit "保存", class: "btn btn-primary", 'data-disable-with' => "正在保存" %>
  <%= link_to "返回", admin_nodes_path, class: "btn btn-default"  %>
<% end %>
