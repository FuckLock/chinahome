<%= simple_form_for(@site_config, url: admin_site_config_path(@site_config.var), method: 'patch') do |f| %>
  <div class="form-group">
    <%= f.input :value, input_html: { rows: 20, value: Setting[@site_config.var]},
        label: @site_config.var, hint: t("setting.#{@site_config.var}") %>
  </div>
  <div class="form-group">
    <%= f.submit t("common.save"), class: "btn btn-primary", 'data-disable-with' => t("common.saving") %>
    <%= link_to raw(t("common.cancel")), admin_site_configs_path, class: "btn btn-default" %>
  </div>
<% end %>
