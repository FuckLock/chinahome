<% content_for :sitemap do %>
  用户
<% end %>

<div class="toolbar">
  <div class="toolbar-con users-form">
    <%= form_tag admin_users_path, class: "form-inline", method: :get do %>
      <div class="form-group">
        <%= text_field_tag :q, params[:q], class: "form-control mr-sm-2 mt-sm-2", placeholder: "用户名/Email" %>
      </div>
      <div class="form-group">
        <%= select_tag "type", options_for_select([ "全部类别", "组织" ], "全部类别"), class: 'form-control mr-sm-2 mt-sm-2' %>
      </div>
      <div class="form-group">
        <%= submit_tag "搜索", class: "form-control mr-sm-2 mt-sm-2"%>
      </div>
    <% end %>
    <table class="table table-striped table-sm table-bordered mt-sm-2">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">账号</th>
          <th scope="col">姓名</th>
          <th scope="col">Email</th>
          <th scope="col">注册时间</th>
          <th scope="col">操作</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.login %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at %></td>
            <td><%= link_to raw("<i class='fa fa-pencil'></i>"), edit_admin_user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
