<table class="table table-striped table-sm table-bordered mt-sm-2">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">标题</th>
      <th scope="col">节点</th>
      <th scope="col">发帖人</th>
      <th scope="col">回帖</th>
      <th scope="col">时间</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.id %></td>
        <td><%= topic.title %></td>
        <td><%= topic.node.name %></td>
        <td><%= topic.user.login %></td>
        <td><%= topic.replies_count %></td>
        <td><%= topic.created_at %></td>
        <td>
          <%= link_to "置顶", "#" %>
          <%= link_to raw("<i class='fa fa-pencil'></i>"), edit_admin_topic_path(topic) %>
          <%= link_to raw("<i class='fa fa-trash'></i>"), admin_topic_path(topic), method: :delete, 'data-confirm' => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
