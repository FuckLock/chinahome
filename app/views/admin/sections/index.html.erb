<% content_for :sitemap do %>
  <span>分类</span>
<% end %>

<%= link_to "新建分类", new_admin_section_path, class: "btn btn-default" %>
<table class="table table-striped table-sm table-bordered mt-sm-2">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">名称</th>
      <th scope="col">排序</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.id %></td>
        <td><%= section.name %></td>
        <td><%= section.sort %></td>
        <td><%= link_to raw("<i class='fa fa-pencil'></i>"), edit_admin_section_path(section) %>
          <%= link_to raw("<i class='fa fa-trash'></i>"), admin_section_path(section), method: :delete, 'data-confirm' => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
