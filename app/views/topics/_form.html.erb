<%= simple_form_for @topic do |f| %>
  <%= f.hidden_field :node_id %>
  <div class="form-group">
    <div class="input-group">
      <button type="button" class="btn btn-default" data-toggle="modal" data-target="#node-selector" id="node-selector-button">
        <%= @topic.node&.name || '选择节点...' %>
      </button>
      <%= f.text_field :title, class: "form-control", placeholder: "在这里填写标题" %>
    </div>
  </div>

  <%= render "editor_toolbar" %>

  <div class="form-group">
    <%= f.text_area :body, class: "form-control topic-editor", rows: 20 %>
  </div>
  <div class="form-group">
    <%= f.submit t("common.save"), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render 'node_selector' %>
