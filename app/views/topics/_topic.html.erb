<div class="topic">
  <div class="topic-left avatar">
    <%= user_avatar_tag current_user, :md %>
  </div>

  <div class="topic-body">
    <div>
      <span class="node-name"><%= topic.node.name %></span>
      <span class="topic-title"><%= link_to topic.title, topic_path(topic) %>
        <% if topic.excellent  %>
          <i class="fa fa-diamond"></i>
        <% end %>
        <% if topic.place_top %>
          <i class="fa fa-angle-double-up" title="置顶" data-toggle="tooltip"></i>
        <% end %>
        <% unless topic.discuss %>
          <i class="fa fa-check" data-toggle="tooltip" title="问题已解决／话题已结束讨论"></i>
        <% end %>
      </span>
    </div>
    <div class="topic-info">
      <%= current_user.login %> . 发布于<%= topic.created_at.to_date %>
    </div>
  </div>

  <div class="topic-right">
    <%= topic.replies_count %>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('[data-toggle="tooltip"]').tooltip().on('click', function() {
      $(this).tooltip('hide')
    })
  })
</script>
