<% @place_top_topics = @place_top_topics.to_a %>
<div class="panel topic-index-panel" style="margin-top:-30px;">
  <div class="panel-body">
      <% cache([:topic_index, @place_top_topics]) do %>
        <% if @place_top_topics.present? %>
          <%= render partial: '/topics/topic', collection: @place_top_topics %>
        <% end %>
      <% end %>

      <% cache([:topics_topic, @topics.maximum(:updated_at), @topics.count]) do %>
        <%= render partial: 'topics/topic', collection: @topics %>
      <% end %>
  </div>
</div>
