<div class="modal fade" id="node-selector" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <strong>话题节点</strong>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% Section.includes(:nodes).each do |section| %>
          <div class="node-list">
            <span class="media-left"><%= section.name %></span>
            <% section.nodes.each do |node| %>
              <span class="node-name"><%= link_to(node.name, node_topics_path(node), title: node.name, data: { id: node.id }, class: "node-a")%></span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
