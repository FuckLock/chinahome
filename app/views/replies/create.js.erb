$('.reply-alert .alert').remove();
<% if @reply.errors.present? %>
  $(".reply-alert").append("<%= j(render 'replies/alert_messages', target: @msg, alert: 'warning')  %>")
<% else %>
  <%= render 'create_callback', reply: @reply %>
  $(".reply-alert").append("<%= j(render 'replies/alert_messages', target: @msg, alert: 'success')  %>")
<% end %>
