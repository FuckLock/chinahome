<div class="hot-topic">
  <div class="hot-topics-top">
    <span class="node-name">
      <%= link_to topic.node.name, node_topics_path(topic.node) %>
    </span>
    <span class="topic-title">
      <%= link_to topic.title, topic_path(topic) %>
    </span>
    <% if topic.excellent %>
      <i class="fa fa-diamond"></i>
    <% end %>
  </div>

  <div class="hot-topics-bottom">
    <%= topic.likeed_users.count %> 个💖 · <%= topic.replies.count %> 条回复
  </div>
</div>
